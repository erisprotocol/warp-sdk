{
  "name": "@warp-protocol/sdk",
  "version": "0.1.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && node build.js",
    "start": "esbuild src/bot.ts --bundle --platform=node --outdir=dist --outbase=src --external:jsonpath && node ./dist/bot.js",
    "format": "prettier --write \"src/**/*.{js,ts,tsx}\""
  },
  "lint-staged": {
    "./src/{**/*,*}.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@terra-money/terra.js": "^3.1.6",
    "@types/jsonpath": "^0.2.0",
    "@types/node": "^16.11.56",
    "axios": "^1.1.2",
    "big.js": "^6.2.1",
    "dotenv": "^16.0.1",
    "jsonpath": "^1.1.1",
    "lodash": "^4.17.21",
    "pino": "^8.4.2",
    "typescript": "^4.8.2"
  },
  "devDependencies": {
    "@chialab/esbuild-plugin-require-resolve": "^0.17.1",
    "@types/lodash": "^4.14.191",
    "esbuild": "^0.14.54",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0"
  }
}
